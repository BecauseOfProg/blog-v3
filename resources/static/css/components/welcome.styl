/*
 * This file contains the style of the welcome part of all pages.
 * Including the media queries for responsive display
 */

.welcome
  height: 574px
  .header
    font-weight: 600
    text-align: center
  .subtitle
    text-align: center
  p
    text-align: center

@media screen and (max-width: 500px)
  .welcome .header
    font-size: 40px

@media screen and (max-width: 800px)
  .welcome
    height: 600px

@media screen and (max-width: 600px)
  .welcome
    height: 650px

@media only screen and (min-width: 1000px)
  .welcome-bop-carousel
    top: -64px !important
    .carousel-item
      padding-top: 85px

  .welcome
    padding-top: 50px

.carousel-bop-homepage-title
  margin-top: 64px
