/*
 * This is the main style file, which contains various CSS properties and imports those of other files.
 */

// Importing the other files
@import 'fields.styl'
@import 'icons.styl'
@import 'welcome.styl'

body
  background-color: #e0e0e0

div.divider {
  background-color: #9e9e9e !important
}

nav div.nav-content ul.tabs li.tab
  color: #9e9e9e !important

nav div.nav-content ul.tabs li.tab.active
  color: #fff !important

nav div.nav-content ul.tabs .indicator
  color: #fff !important

ul.blog-categories li div.collapsible-body
  display: flex
  flex-wrap: wrap
  justify-content: center

ul.blog-categories li div.collapsible-body span
  max-width: 30%
  min-width: 30%

ul.blog-categories li div.collapsible-header
  display: flex
  justify-content: center

.slider .indicators .indicator-item.active
  background-color: #b71c1c

@media screen and (max-width: 800px)
  ul.blog-categories li div.collapsible-body span
    max-width: 50%
    min-width: 50%

  .upper-content
    float: inherit !important

@media screen and (max-width: 500px)
  ul.blog-categories li div.collapsible-body span
    max-width: 100%
    min-width: 100%

.no-margin
  margin: 0

.flex
  display: flex
  flex-wrap: wrap
  justify-content: center

a.no-style-link
  text-decoration: inherit
  color: inherit

.no-border
  border: 0

@media screen and (min-width: 600px)
  nav div.nav-wrapper a span img
    width: 50px
    height: 50px
    position: relative
    top: 8px
    left: 2px
    float: left

@media screen and (max-width: 600px)
  nav div.nav-wrapper a span img
    width: 40px
    height: 40px
    position: relative
    top: 8px
    left: 2px
    float: left

ul li img.avatar-img
  width: 45px
  height: 45px
  position: relative
  top: 9px
  float: left

#mapquest
  width: 100%
  height: 400px

div.card.author-card div.card-image img
  width: 220px

div.card.author-card div.card-stacked div.card-action a img
  width: 40px

div.card.author-card div.card-stacked div.card-action
  padding: 5px

@media screen and (max-width: 740px)
  div.card.author-card
    display: block

  div.card.author-card div.card-image img
    min-width: 200%

.semitransparent
  background: rgba(60, 0, 0, 0.1)

@media only screen and (max-width: 1000px)
  .no-mobile
    display: none

  .h250px
    height: 270px

@media only screen and (min-width: 1000px)
  .h250px
    height: 250px

img.center
  display: block
  margin-left: auto
  margin-right: auto

.h170px
  height: 200px

.bop-breadcrumb
  display: inline-flex
  vertical-align: middle
  margin: 0

.article-content
  margin: .5rem 0 1rem 0
  border: 1px solid #e0e0e0
  border-radius: 2px
  overflow: hidden
  position: relative
  padding: 0.5rem 2rem 1rem 2rem

.article-content h4
  font-weight: 300

.upper-content
  top: -200px
  position: relative
  margin-bottom: -200px

@media only screen and (min-width: 1000px)
  .upper-content-no-mobile
    top: -200px
    position: relative
    margin-bottom: -200px

.lower-title
  top: 90px
  position: relative

.h300px
  height: 300px

.tx-center
  text-align: center

.darker-bg
  background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5))

.markdown-body
  margin-top: 20px

.markdown-body ul
.markdown-body li
  list-style-type: unset !important

.icon-chip
  line-height: inherit

.bop-title
  margin-top: 0px

.btn-share
  margin-bottom: 5px

.nav-wrapper.semitransparent
  overflow: hidden

.carousel-bop-homepage-title
  margin-top: 64px;
